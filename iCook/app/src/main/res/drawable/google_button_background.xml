<!-- res/drawable/button_ripple_background.xml -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/darker_gray"> <!-- Cor do efeito ripple -->

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/blue" /> <!-- Cor do fundo do botão (cor azul do Google) -->
            <corners android:radius="25dp" /> <!-- Borda arredondada -->
            <padding
                android:left="12dp"
                android:top="4dp"
                android:right="12dp"
                android:bottom="4dp" /> <!-- Espaçamento interno -->
        </shape>
    </item>
</ripple>
