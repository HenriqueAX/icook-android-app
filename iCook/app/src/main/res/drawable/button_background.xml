<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/darker_gray"> <!-- Cor do ripple -->

    <!-- Fundo do botão com borda arredondada -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#757575" /> <!-- Cor do botão -->
            <corners android:radius="16dp" /> <!-- Borda arredondada -->
            <padding
                android:left="12dp"
                android:top="4dp"
                android:right="12dp"
                android:bottom="4dp" />
        </shape>
    </item>
</ripple>
