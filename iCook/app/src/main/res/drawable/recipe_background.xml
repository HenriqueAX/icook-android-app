<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/darker_gray"> <!-- Cor do efeito ripple -->

    <!-- Fundo do botão com borda arredondada e outras propriedades -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@android:color/white" /> <!-- Cor do botão -->
            <corners android:radius="8dp" /> <!-- Borda arredondada -->
            <stroke android:width="1dp" android:color="#E0E0E0" /> <!-- Borda do botão -->
            <shadowColor android:color="#66000000" /> <!-- Cor da sombra -->
            <padding
                android:left="12dp"
                android:top="4dp"
                android:right="12dp"
                android:bottom="4dp" /> <!-- Espaçamento interno -->
        </shape>
    </item>
</ripple>
